<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/zomake_logo"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line">

            <com.jaydenxiao.common.commonwidget.FontTextView
                android:id="@+id/tv_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="\ue98e"
                android:textColor="@color/role_right_gray"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_phone_tip"
                style="@style/black_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/tv_phone_icon"
                android:text="+86"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_phone"
                style="@style/black_15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_phone_tip"
                android:background="@null"
                android:hint="手机号码"
                android:textColorHint="@color/gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line">

            <com.jaydenxiao.common.commonwidget.FontTextView
                android:id="@+id/tv_code_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="\ue7e5"
                android:textColor="@color/role_right_gray"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_code"
                style="@style/black_15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_code_icon"
                android:background="@null"
                android:hint="验证码"
                android:textColorHint="@color/gray"/>

            <TextView
                android:id="@+id/tv_sendcode"
                style="@style/blue_13sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="发送验证码"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line">

            <com.jaydenxiao.common.commonwidget.FontTextView
                android:id="@+id/tv_pwd_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/line"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="\ue698"
                android:textColor="@color/role_right_gray"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pwd"
                style="@style/black_15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_pwd_icon"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="密码"
                android:textColorHint="@color/gray"/>

            <com.jaydenxiao.common.commonwidget.FontTextView
                android:id="@+id/tv_show_pwd"
                style="@style/black_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="\ue68b"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp"/>


    </LinearLayout>

</RelativeLayout>