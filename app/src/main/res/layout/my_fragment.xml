<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#f4f4f4">

    <LinearLayout
        android:id="@+id/order"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:background="@color/white"
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_view_icon_margin"
            android:paddingTop="@dimen/text_view_icon_padding"
            android:paddingBottom="@dimen/text_view_icon_padding"
            android:drawableTop="@drawable/tab_bar_my_selected"
            android:gravity="center_horizontal"
            android:text="订单"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="13sp"/>
        />
        <TextView
            android:background="@color/white"
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_view_icon_margin"
            android:paddingTop="@dimen/text_view_icon_padding"
            android:paddingBottom="@dimen/text_view_icon_padding"
            android:layout_marginLeft="1dp"
            android:drawableTop="@drawable/tab_bar_my_selected"
            android:gravity="center_horizontal"
            android:text="购物车"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="13sp"/>
        />
    </LinearLayout>

    <com.jaydenxiao.common.irecyclerview.IRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_center_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:loadMoreEnabled="true"
        app:refreshEnabled="true" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="邀请好友，各得30元代金券"
            android:textSize="13sp"
        />
        <ImageView
            android:layout_height="15dp"
            android:layout_width="7dp"
            android:background="@drawable/tab_bar_my_selected"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="设计师品牌入驻，享高额销售奖励"
            android:textSize="13sp"
        />
        <ImageView
            android:layout_height="15dp"
            android:layout_width="7dp"
            android:background="@drawable/tab_bar_my_selected"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

</LinearLayout>