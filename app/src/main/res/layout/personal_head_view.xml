<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/design_snackbar_background"/>


        <include layout="@layout/base_title_bar"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:src="@drawable/circle_drawable"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/black_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="leoWn"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="自我介绍，要打好多字啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"/>

        <LinearLayout
            android:id="@+id/relation_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info"
            android:orientation="horizontal">

            <TextView
                style="@style/blue_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="1234 粉丝"/>

            <TextView
                style="@style/blue_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="1234 关注"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relation_root"
            android:layout_centerHorizontal="true"
            android:background="@drawable/transparent_border"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text=" + 关注"/>

    </RelativeLayout>


</LinearLayout>