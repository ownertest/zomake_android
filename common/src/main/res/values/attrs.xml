<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference"/>
    <attr name="dayNightOneTextColor" format="color|reference"/>
    <attr name="dayNightTwoTextColor" format="color|reference"/>
    <attr name="dayNightThreeTextColor" format="color|reference"/>
    <attr name="dayNightBackgroundDrawable" format="color|reference"/>

    <declare-styleable name="DayNightMode">
        <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
    </declare-styleable>
    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference"/>
        <attr name="loadMoreFooterLayout" format="reference"/>
        <attr name="refreshEnabled" format="boolean"/>
        <attr name="loadMoreEnabled" format="boolean"/>
        <attr name="refreshFinalMoveOffset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BorderFontTextView">
        <attr name="borderLeft" format="boolean"/>
        <attr name="borderTop" format="boolean"/>
        <attr name="borderRight" format="boolean"/>
        <attr name="borderBottom" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="DrawerBehavior">
        <attr name="android:layout_gravity"/>
    </declare-styleable>

    <declare-styleable name="DrawableCenterTextView">
        <attr name="leftDrawable" format="reference|color"/>
        <attr name="rightDrawable" format="reference|color"/>
        <attr name="topDrawable" format="reference|color"/>
        <attr name="bottomDrawable" format="reference|color"/>

        <attr name="leftDrawableWidth" format="reference|dimension"/>
        <attr name="rightDrawableWidth" format="reference|dimension"/>
        <attr name="topDrawableWidth" format="reference|dimension"/>
        <attr name="bottomDrawableWidth" format="reference|dimension"/>

        <attr name="leftDrawableHeight" format="reference|dimension"/>
        <attr name="rightDrawableHeight" format="reference|dimension"/>
        <attr name="topDrawableHeight" format="reference|dimension"/>
        <attr name="bottomDrawableHeight" format="reference|dimension"/>
    </declare-styleable>
</resources>